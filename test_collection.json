	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var baseUrl = pm.variables.get('base_url');",
					"var grant = pm.variables.get('grant_type');",
					"var id = pm.variables.get('client_id');",
					"var secret = pm.variables.get('client_secret');",
					"var usr = pm.variables.get('username');",
					"var pwd = pm.variables.get('password');",
					"",
					"var url = `${baseUrl}/oauth2/token?grant_type=${grant}&client_id=${id}&client_secret=${secret}&username=${usr}&password=${pwd}`;",
					"",
					"pm.sendRequest({",
					"  url: url,",
					"  method: 'POST',",
					"  header: {",
					"    'Content-Type': 'application/json'",
					"  },",
					"  body: {",
					"    mode: 'raw'",
					"  }",
					"}, function (err, response) {",
					"  if (err) {",
					"    console.error(err);",
					"  } else {",
					"    var jsonData = response.json();",
					"    pm.variables.set('access_token', jsonData.access_token);",
					"  }",
					"});"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Check if response is a non-empty object",
					"pm.test(\"Non-empty response object\", function () {",
					"  var responseBody = pm.response.json();",
					"  pm.expect(responseBody).to.be.an('object');",
					"  pm.expect(responseBody).to.not.be.empty;",
					"});"
				]
			}
		}
	],
